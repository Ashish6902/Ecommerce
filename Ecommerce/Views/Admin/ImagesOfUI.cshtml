@model IEnumerable<Ecommerce.Models.AdminUiImage.ImagesUI>

@{
    ViewBag.Title = "ImagesOfUI";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ImagesOfUI</h2>

@using (Html.BeginForm("UploadImage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <label for="imageFile">Select an image:</label>
        <input type="file" id="imageFile" name="imageFile" />
    </div>

    <div>
        <input type="submit" value="Upload Image" />
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageId)
        </th>
        <th>
            Images
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageId)
            </td>
            <td>
                <div>

                    @if (item.ImageData != null && item.ImageData.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)" alt="Image" height="100px" ,width="100px" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
            </td>
            <td>
                @Html.ActionLink("Edit Image", "EditImage", new { id = item.ImageId })
            </td>
        </tr>
    }

</table>
