@model Ecommerce.Logins

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #F4EEE0; /* Background color */
        }

        .container {
            margin-top: 100px;
        }

        .card {
            background-color: #6D5D6E; /* Card background color */
            color: #F4EEE0; /* Text color inside the card */
        }

        .form-control {
            background-color: #4F4557; /* Input background color */
            color: #F4EEE0; /* Text color inside the input */
        }

        .btn-primary {
            background-color: #393646; /* Login button background color */
            border-color: #393646; /* Login button border color */
        }

            .btn-primary:hover {
                background-color: #6D5D6E; /* Hover color for the login button */
                border-color: #6D5D6E;
            }

        .btn-secondary {
            background-color: #4F4557; /* Register button background color */
            border-color: #4F4557; /* Register button border color */
        }

            .btn-secondary:hover {
                background-color: #393646; /* Hover color for the register button */
                border-color: #393646;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Login</h2>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.Label("Password", htmlAttributes: new { @class = "form-label" })
                                @Html.PasswordFor(model => model.HashedPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.HashedPassword, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                            <div class="mt-3">
                                @Html.ActionLink("Register", "Register", "Accounts", new { @class = "btn btn-secondary" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
